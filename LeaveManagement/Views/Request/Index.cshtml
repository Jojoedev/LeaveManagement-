@model IEnumerable<Request>


    
@{
    ViewData["Title"] = "Index";
}


<h3> List of Requests</h3>

<table class="table table-stripped">
    <thead>
    <tr>
        
        <th>Description</th>
        <th>Amount =N=</th>
        <th>Request Date</th>
        <th>Source Documents</th>
        <th>Requesting Department</th>
        
    </tr>
            
     </thead>
      <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Description </td>
                <td> @item.Amount </td>
                <td> @item.RequestDate</td>
                <td> @item.ImageFile</td>
                <td> @item.Requester.Name</td>
              
                
                <td>            
                    <a asp-action="Delete" asp-route-id="@item.Id" onclick=" return confirm('Are you sure you want to delete this?')" class="btn btn-danger"> <i class="fa-solid fa-trash"></i></a>
                </td>

            </tr>
        }
    
    </tbody>
</table>
<div>
    <a href="/Request/Create" class="btn btn-primary">Create</a>   
</div>
