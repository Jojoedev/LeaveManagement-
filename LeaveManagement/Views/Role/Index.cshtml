@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>  
@{  
    ViewData["Title"] = "Index";  
}  
  
<h1>List of Roles</h1>  
<a asp-action="Create" class="btn btn-primary">Create</a>  
<table class="table table-striped table-bordered">  
    <thead>  
        <tr>  
            <td>Id</td>  
            <td>Name</td>  
        </tr>  
    </thead>  
    <tbody>  
        @foreach (var role in Model)  
        {  
            <tr>  
                <td>@role.Id</td>  
                <td>@role.Name</td>
                <td>
                     
                <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning"> <i class="fa-solid fa-pen-to-square"></i></a> |
                <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-info" > <i class="fa-solid fa-circle-info"></i></a> |
                <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger"> <i class="fa-solid fa-trash"></i></a>
            </td>
                
            </tr>  
        }  
    </tbody>  
</table>  